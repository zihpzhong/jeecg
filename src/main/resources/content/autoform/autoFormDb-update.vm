		<script type="text/javascript">
			jQuery(document).ready(function() {
				jQuery('#tt').tabs({
					onSelect: function(title) {
						jQuery('#tt .panel-body').css('width', 'auto');
					}
				});
				jQuery(".tabs-wrap").css('width', '100%');
			});

			jQuery(function() {
				jQuery("form table input[name='dbType']").attr("disabled", true);

				jQuery("#tbDbKey").val("");
				jQuery("#tbDbTableName").val("jform_employee_leave");
			});

			jQuery(function() {
				if (jQuery("#autoFormDbField").length > 0) jQuery("#autoFormDbField").load("autoFormDbController.do?autoFormDbFieldList_vm&id=${autoFormDbPage.id}");
				if (jQuery("#autoFormParam").length > 0) jQuery("#autoFormParam").load("autoFormDbController.do?autoFormParamList_vm&id=${autoFormDbPage.id}");
				if (jQuery("#autoFormDbFieldForTable").length > 0) jQuery("#autoFormDbFieldForTable").load("autoFormDbController.do?autoFormDbFieldForTableList_vm&id=${autoFormDbPage.id}");
				
				if (jQuery('#dbTableName').length > 0) {
					jQuery('#dbTableName').change(function() {
						jQuery.ajax({
							url: "autoFormDbController.do?getTableFields",
							data: {
								dbKey: jQuery("#tbDbKey").val(),
								tableName: jQuery("#dbTableName").val()
							},
							
							type: "Post",
							dataType: "json",
							success: function(data) {
								if (data.status == "success") {
									jQuery("#table_div #autoFormDbFieldForTable").empty();
									jQuery.each(data.files,
									function(index, e) {
										var jQuerytr = jQuery("#add_autoFormDbFieldForTable_table_template tr").clone();
										jQuerytr.find("td:eq(1) :text").val(index);
										jQuerytr.find("td:eq(2) :text").val(e);
										jQuery("#table_div #autoFormDbFieldForTable").append(jQuerytr);
									});
									resetTrNum("table_div #autoFormDbFieldForTable");
								} else {
									jQuery.messager.alert('??', data.datas);
								}
							}
						});
					});
				}
				hideDataSourceAndDataTable();
			});
			function hideDataSourceAndDataTable() {
				var checkedVal = jQuery("input[name='dbType']:checked").val();
				if (checkedVal == 'table') {
					jQuery("#dataSourceTr").hide();
				} else {
					jQuery("#dataSourceTr").show();
				}
			}
			
			function setDataSourceVal() {
				var checkedVal = jQuery("input[name='dbType']:checked").val();
				if (checkedVal == 'table') {
					jQuery("#tbDbKey").val(jQuery("#dbKey").find("option:selected").val());
					jQuery("#tbDbTableName").val(jQuery("#dbTableName").find("option:selected").val());
				}
			}
			jQuery(function() {
				jQuery("#formobj").Validform({
					tiptype: 3,
					btnSubmit: "#btn_sub",
					btnReset: "#btn_reset",
					ajaxPost: true,
					usePlugin: {
						passwordstrength: {
							minLen: 6,
							maxLen: 18,
							trigger: function(obj, error) {
								if (error) {
									obj.parent().next().find(".Validform_checktip").show();
									obj.find(".passwordStrength").hide();
								} else {
									jQuery(".passwordStrength").show();
									obj.parent().next().find(".Validform_checktip").hide();
								}
							}
						}
					},
					callback: function(data) {
						var win = frameElement.api.opener;
						if (data.success == true) {
							frameElement.api.close();
							win.tip(data.msg);
						} else {
							if (data.responseText == '' || data.responseText == undefined) {
								jQuery.messager.alert('错误', data.msg);
								jQuery.Hidemsg();
							} else {
								try {
									var emsg = data.responseText.substring(data.responseText.indexOf('错误描述'), data.responseText.indexOf('错误信息'));
									jQuery.messager.alert('错误', emsg);
									jQuery.Hidemsg();
								} catch(ex) {
									jQuery.messager.alert('错误', data.responseText + "");
									jQuery.Hidemsg();
								}
							}
							return false;
						}
						win.reloadTable();
					}
				});
			});
		</script>
