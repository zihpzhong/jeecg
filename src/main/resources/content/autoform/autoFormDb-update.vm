	<body style="overflow-x: hidden;">
		<form id="formobj" action="autoFormDbController.do?doUpdate" name="formobj" method="post">
			<input type="hidden" id="btn_sub" class="btn_sub" />
			<input id="id" name="id" type="hidden" value="$!{autoFormDbPage.id}"/>
			<input id="createName" name="createName" type="hidden" value="$!{autoFormDbPage.createName}"/>
			<input id="createBy" name="createBy" type="hidden" value="$!{autoFormDbPage.createBy}"/>
			<input id="updateName" name="updateName" type="hidden" value="$!{autoFormDbPage.updateName}"/>
			<input id="updateBy" name="updateBy" type="hidden" value="$!{autoFormDbPage.updateBy}"/>
			<input id="sysOrgCode" name="sysOrgCode" type="hidden" value="$!{autoFormDbPage.sysOrgCode}"/>
			<input id="sysCompanyCode" name="sysCompanyCode" type="hidden" value="$!{autoFormDbPage.sysCompanyCode}"/>
			<input id="createDate" name="createDate" type="hidden" value="$!{autoFormDbPage.createDate}"/>
			<input id="updateDate" name="updateDate" type="hidden" value="$!{autoFormDbPage.updateDate}"/>
			<input id="autoFormId" name="autoFormId" type="hidden" value="$!{autoFormDbPage.autoFormId}"/>
			<input name="dbType" type="hidden" value="$!{autoFormDbPage.dbType}"/>
			<table cellpadding="0" cellspacing="1" class="formtable">
				<tr>
					<td align="right">
						<label class="Validform_label">数据源编码:</label></td>
					<td class="value">
						<input id="dbName" name="dbName" type="text" style="width: 150px" ajaxurl="autoFormDbController.do?checkDbName&cVal=$!{autoFormDbPage.dbName}" class="inputxt" value='$!{autoFormDbPage.dbName}' nullmsg="数据源编码不能为空!" errorMsg="不能为中文" datatype="/^[A-Za-z\d-._]+$/">
						<span class="Validform_checktip"></span>
					</td>
					<td align="center" width="100px">
						<label class="Validform_label">数据源名称:</label></td>
					<td class="value" colspan="2">
						<input id="dbChName" name="dbChName" type="text" style="width: 150px" class="inputxt" datatype="*" nullmsg="数据源名称不能为空!" value='${autoFormDbPage.dbChName}' />
						<span class="Validform_checktip"></span>
					</td>
				</tr>
				<tr>
					<td align="right">
						<label class="Validform_label">数据源类型:</label>
					</td>
					<td class="value">
						<input type="radio" name="dbType" value="table" />数据库表
						<input type="radio" name="dbType" checked="checked" value="sql" />动态SQL
						<input type="radio" name="dbType" value="clazz" />java类
						<span class="Validform_checktip"></span>
					</td>
					<td align="center" width="100px">
						<label class="Validform_label">
							<b>动态数据源:</b>
						</label>
					</td>
					<td class="value" colspan="2">
						<select id="dbKey" name="dbKey">
							<option value="" selected="selected">--动态数据源--</option>
							#if($!{dynamicDataSourceEntitys})
								#foreach($!{info} in $!{dynamicDataSourceEntitys})
									<option value="${info.dbKey}">${info.dbKey}</option>
								#end
							#end
                        </select>
						<span class="Validform_checktip"></span>
					</td>
				</tr>
				
				<tr id="dataSourceTr">
					<td align="right">
						<label class="Validform_label">填报数据源:</label></td>
					<td class="value">
						<select id="tbDbKey" name="tbDbKey">
							<option value="">--平台数据源--</option>
							#if($!{dynamicDataSourceEntitys})
								#foreach($!{info} in $!{dynamicDataSourceEntitys})
									<option value="${info.dbKey}">${info.dbKey}</option>
								#end
							#end
						</select>
						<span class="Validform_checktip"></span>
					</td>
					<td align="center">
						<label class="Validform_label">填报数据库表:</label></td>
					<td class="value">
						<select id="tbDbTableName" name="tbDbTableName">
							#if($!{tableNames})
								#foreach($!{info} in $!{tableNames})
									<option value="${info}">${info}</option>
								#end
							#end
						</select>
						<span class="Validform_checktip"></span>
					</td>
					<td class="value"></td>
				</tr>
			</table>
			
			#if($autoFormDbPage.dbType == 'table')
				<div style="margin-top: 5px;border: 1px solid #E6E6E6;" id="table_div" class="formdbdiv">
					<table cellpadding="0" cellspacing="1" class="formtable">
						<tr>
							<td align="right">
								<label class="Validform_label"><t:mutiLang langKey="common.dynamic.dbsource"/>:</label>
							</td>
							<td class="value">
								<select id="dbKey" name="dbKey">
									<option value="">平台数据源</option>
									#if($!{dynamicDataSourceEntitys})
        								#foreach($!{info} in $!{dynamicDataSourceEntitys})
        									<option value="${info.dbKey}" #if($autoFormDbPage.dbKey == $dynamicDataSourceEntity.dbKey)selected="selected"#end>${info.dbKey}</option>
        								#end
        							#end
								</select>
								<span class="Validform_checktip"></span>
							</td>
							<td align="right">
								<label class="Validform_label">数据库表名::</label>
							</td>
							<td class="value">
						     	 <select id="dbTableName" name="dbTableName">
									#if($!{tableNames})
        								#foreach($!{info} in $!{tableNames})
        									<option value="${info}" #if($tableName == $autoFormDbPage.dbTableName)selected="selected"#end>${info}</option>
        								#end
        							#end
						     	 </select>
						     	 <span class="Validform_checktip"></span>
							</td>
							<td class="value">
							</td>
						</tr>
						<tr>
							<td class="value" colspan="5">
								<div style="width:100%;height:100%" title="表单数据源属性" id="autoFormDbFieldForTable"></div>
							</td>
						</tr>
					</table>
				</div>
			#end
			
			#if($autoFormDbPage.dbType == 'sql')
    			<div style="margin-top: 5px;border: 1px solid #E6E6E6" id="sql_div" class="formdbdiv">
    				<table cellpadding="0" cellspacing="1" style="width: 100%">
    					<tr>
    						<td align="right" width="95px">
    							<label class="Validform_label">动态查询SQ:</label>
    						</td>
    						<td class="value" colspan="3" align="center">
    							<span id="dbDynSqlButton"></span>
    						</td>
    					</tr>
    					<tr>
    						<td class="value" colspan="4">
    							 <div style="width:100%;border: 1px solid #E6E6E6"">
    							 	<textarea id="dbDynSql" style="width:99%" class="inputxt" rows="10" name="dbDynSql">$!{autoFormDbPage.dbDynSql}</textarea>
									<p>
        							 	&nbsp;&nbsp;&nbsp;&nbsp;您可以键入“”作为一个参数，这里abc是参数的名称。例如：<br/>
        								&nbsp;&nbsp;&nbsp;&nbsp;select * from table where id = ${abc}。<br/>
        								&nbsp;&nbsp;&nbsp;&nbsp;select * from table where id = '${abc}'（如果id字段为字符串类型）
									</p>
    							 </div>
    						</td>
    					</tr>
    					<tr>
    						<td class="value" colspan="4">
    							<fieldset style="border: 1px solid #E6E6E6;">
    								<legend>查询参数</legend>
    								<div style="width:100%;height:100%" title="表单参数" id="autoFormParam"></div>
    							</fieldset>	
    						</td>
    					</tr>
    					<tr>
    						<td class="value" colspan="4">
    							<fieldset style="border: 1px solid #E6E6E6;">
    								<legend>查询数据列</legend>
    								<div style="width:100%;height:100%" title="表单数据源属性" id="autoFormDbField"></div>
    							</fieldset>
    						</td>
    					</tr>
    				</table>
    			</div>
			#end

			#if($autoFormDbPage.dbType == 'clazz')
				<div style="margin-top: 5px;border: 1px solid #E6E6E6" id="clazz_div" class="formdbdiv">
					JAVA类配置
				</div>
			#end
		</form>
		<!-- 添加 附表明细 模版 -->
